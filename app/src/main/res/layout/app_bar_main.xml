<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.tehflatch.liquid.MainActivity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <include layout="@layout/content_main" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/fab_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:background="@color/cardview_light_background"
            android:visibility="gone">

        </android.support.constraint.ConstraintLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_date"
            android:layout_width="@dimen/secfab_dimens"
            android:layout_height="@dimen/secfab_dimens"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:alpha="0"
            android:scaleType="center"
            app:backgroundTint="@color/primary"
            app:srcCompat="@drawable/ic_date_cig_icon" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_multi"
            android:layout_width="@dimen/secfab_dimens"
            android:layout_height="@dimen/secfab_dimens"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:alpha="0"
            android:scaleType="center"
            app:backgroundTint="@color/accent"
            app:srcCompat="@drawable/ic_multi_cig_icon" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:rotation="45"
            android:scaleType="center"
            android:tint="@color/cardview_light_background"
            app:srcCompat="@drawable/ic_clear_black_24dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabSingleCig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:alpha="0"
            android:rotation="0"
            android:scaleType="center"
            android:tint="@color/cardview_light_background"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_single_add_cig_icon" />

        <android.support.v7.widget.CardView
            android:id="@+id/fabSingleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="95dp"
            android:alpha="0"
            android:scaleX="0"
            android:scaleY="0"
            android:visibility="gone"
            app:cardCornerRadius="10dp"
            app:layout_anchorGravity="end">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginEnd="7dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="3dp"
                android:maxWidth="220dp"
                android:text="@string/add_one_cig"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/fab1Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="95dp"
            android:alpha="0"
            android:scaleX="0"
            android:scaleY="0"
            android:visibility="gone"
            app:cardCornerRadius="10dp"
            app:layout_anchorGravity="end">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginEnd="7dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="3dp"
                android:maxWidth="220dp"
                android:text="@string/add_multi_cig"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/fab2Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="95dp"
            android:alpha="0"
            android:scaleX="0"
            android:scaleY="0"
            android:visibility="gone"
            app:cardCornerRadius="10dp"
            app:layout_anchorGravity="end">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginEnd="7dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="3dp"
                android:maxWidth="220dp"
                android:text="@string/add_date_cig"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>

    </android.support.design.widget.CoordinatorLayout>
</android.support.design.widget.CoordinatorLayout>
